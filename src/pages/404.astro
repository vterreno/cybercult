---
import BaseLayout from '../layouts/BaseLayout.astro';

const missingBackButtonLabel = "Volver a la página de inicio";
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<BaseLayout title="404 - Página no encontrada">
  <div class="page">
    <h1>404 — Página no encontrada...</h1>
      <p>La página que estás buscando no existe. Puede que haya sido movida, eliminada o que hayas ingresado la URL incorrecta.</p>
      <div>
        <a href={base} class="button inline">
          <span class="button__text">{missingBackButtonLabel} →</span>
        </a>
      </div>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
  }
</style>