<script>
  // Funci√≥n para filtrar las soluciones
  function filterSolutions() {
    const searchName = (document.getElementById('search-name') as HTMLInputElement).value.toLowerCase();
    const filterCategory = (document.getElementById('filter-category') as HTMLSelectElement).value;
    const filterDifficulty = (document.getElementById('filter-difficulty') as HTMLSelectElement).value;
    
    const cards = document.querySelectorAll('.solution-card');
    let visibleCount = 0;
    
    cards.forEach((card) => {
      const htmlCard = card as HTMLElement;
      const name = htmlCard.dataset.name || '';
      const category = htmlCard.dataset.category || '';
      const difficulty = htmlCard.dataset.difficulty || '';
      
      const matchesName = name.includes(searchName);
      const matchesCategory = !filterCategory || category === filterCategory;
      const matchesDifficulty = !filterDifficulty || difficulty === filterDifficulty;
      
      if (matchesName && matchesCategory && matchesDifficulty) {
        htmlCard.style.display = 'block';
        visibleCount++;
      } else {
        htmlCard.style.display = 'none';
      }
    });
    
    // Actualizar contador de resultados
    const resultsCount = document.getElementById('results-count');
    const noResults = document.getElementById('no-results');
    
    if (resultsCount) {
      resultsCount.textContent = `Mostrando ${visibleCount} de ${cards.length} soluciones`;
    }
    
    // Mostrar mensaje si no hay resultados
    if (noResults) {
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  }
  
  // Funci√≥n para limpiar filtros
  function clearFilters() {
    (document.getElementById('search-name') as HTMLInputElement).value = '';
    (document.getElementById('filter-category') as HTMLSelectElement).value = '';
    (document.getElementById('filter-difficulty') as HTMLSelectElement).value = '';
    filterSolutions();
  }
  
  // Agregar event listeners
  document.getElementById('search-name')?.addEventListener('input', filterSolutions);
  document.getElementById('filter-category')?.addEventListener('change', filterSolutions);
  document.getElementById('filter-difficulty')?.addEventListener('change', filterSolutions);
  document.getElementById('clear-filters')?.addEventListener('click', clearFilters);
  
  // Inicializar contador
  filterSolutions();
</script>

<style>
