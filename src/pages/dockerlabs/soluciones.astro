---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Cargar autom√°ticamente los archivos Markdown de `src/content/dockerlabs/**`.
const modules = import.meta.glob('../../content/dockerlabs/**/*.md', { eager: true });

// Mapear los m√≥dulos a objetos de soluci√≥n con metadatos m√≠nimos.
const soluciones = Object.entries(modules).map(([path, mod]) => {
  const fm = (mod as any)?.frontmatter ?? {};
  const filename = String(path).split('/').pop()?.replace('.md', '') || '';
  const slug = fm.slug || filename;
  return {
    id: fm.id || slug,
    nombre: fm.title || fm.nombre || fm.name || filename,
    dificultad: fm.difficulty || fm.dificultad || 'Media',
    url: fm.url || `/dockerlabs/${slug}`,
  };
}).sort((a, b) => a.nombre.localeCompare(b.nombre));

const dificultades = ["Muy f√°cil", "F√°cil", "Medio", "Dif√≠cil"];
---

<BaseLayout title="Soluciones DockerLabs - CyberCult">
  <div class="page">
    <h1>Soluciones DockerLabs</h1>
    <p>
      Aqu√≠ encontrar√°s writeups y soluciones detalladas de diversos laboratorios de DockerLabs.
    </p>
    
    <div class="search-container">      
      <div class="filters">
        <div class="filter-group">
          <label for="search-name">Buscar por nombre:</label>
          <input 
            type="text" 
            id="search-name" 
            placeholder="Escribe el nombre del laboratorio..."
            class="search-input"
          />
        </div>
        
        <div class="filter-group">
          <label for="filter-difficulty">Dificultad:</label>
          <select id="filter-difficulty" class="filter-select">
            <option value="">Todas las dificultades</option>
            {dificultades.map(dif => (
              <option value={dif}>{dif}</option>
            ))}
          </select>
        </div>
        
        <button id="clear-filters" class="clear-btn">Limpiar filtros</button>
      </div>
      
      <div id="results-count" class="results-count"></div>
      
      <div class="solutions-grid" id="solutions-container">
        {soluciones.map(solucion => (
          <div 
            class="solution-card" 
            data-name={solucion.nombre.toLowerCase()}
            data-difficulty={solucion.dificultad}
          >
            <div class="solution-header">
              <h3>{solucion.nombre}</h3>
              <span class={`difficulty-badge ${solucion.dificultad.toLowerCase().replace(/\s+/g, '-')}`}>
                {solucion.dificultad}
              </span>
            </div>
            <a href={solucion.url} class="solution-link">Ver soluci√≥n ‚Üí</a>
          </div>
        ))}
      </div>
      
      <div id="no-results" class="no-results" style="display: none;">
        <p>üòï No se encontraron soluciones con los filtros seleccionados.</p>
      </div>
    </div>
    
    <div class="info-box">
      <p>
        <strong>¬øTen√©s una soluci√≥n que quieras compartir?</strong><br>
        Publica tus soluciones <a href="https://github.com/vterreno/cybercult" target="_blank">ac√°</a> y ayudemos a crecer este repositorio juntos. 
      </p>
    </div>
  </div>
</BaseLayout>

<script>
  // Pagination settings
  const pageSize = 6;
  let currentPage = 1;

  function renderPagination(totalVisible: number) {
    const paginationContainer = document.getElementById('pagination');
    if (!paginationContainer) return;

    const totalPages = Math.max(1, Math.ceil(totalVisible / pageSize));
    paginationContainer.innerHTML = '';

    const prevBtn = document.createElement('button');
    prevBtn.textContent = '‚Üê Anterior';
    prevBtn.disabled = currentPage <= 1;
    prevBtn.className = 'pagination-btn';
    prevBtn.addEventListener('click', () => { if (currentPage > 1) { currentPage--; filterSolutions(); } });
    paginationContainer.appendChild(prevBtn);

    const maxPagesToShow = 7;
    let start = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
    let end = Math.min(totalPages, start + maxPagesToShow - 1);
    if (end - start < maxPagesToShow - 1) start = Math.max(1, end - maxPagesToShow + 1);

    for (let p = start; p <= end; p++) {
      const pBtn = document.createElement('button');
      pBtn.textContent = String(p);
      pBtn.className = 'pagination-page';
      if (p === currentPage) pBtn.classList.add('active');
      pBtn.addEventListener('click', () => { currentPage = p; filterSolutions(); });
      paginationContainer.appendChild(pBtn);
    }

    const nextBtn = document.createElement('button');
    nextBtn.textContent = 'Siguiente ‚Üí';
    nextBtn.disabled = currentPage >= totalPages;
    nextBtn.className = 'pagination-btn';
    nextBtn.addEventListener('click', () => { if (currentPage < totalPages) { currentPage++; filterSolutions(); } });
    paginationContainer.appendChild(nextBtn);
  }

  function filterSolutions() {
    const searchNameEl = document.getElementById('search-name') as HTMLInputElement | null;
    const filterDifficultyEl = document.getElementById('filter-difficulty') as HTMLSelectElement | null;

    const searchName = (searchNameEl?.value || '').toLowerCase();
    const filterDifficulty = filterDifficultyEl?.value || '';

    const cards = Array.from(document.querySelectorAll('.solution-card')) as HTMLElement[];

    const visibleCards = cards.filter((card) => {
      const htmlCard = card;
      const name = (htmlCard.dataset.name || '').toLowerCase();
      const difficulty = htmlCard.dataset.difficulty || '';

      const matchesName = name.includes(searchName);
      const matchesDifficulty = !filterDifficulty || difficulty === filterDifficulty;

      return matchesName && matchesDifficulty;
    });

    const totalVisible = visibleCards.length;
    const totalCards = cards.length;

    const totalPages = Math.max(1, Math.ceil(totalVisible / pageSize));
    if (currentPage > totalPages) currentPage = totalPages;
    if (currentPage < 1) currentPage = 1;

    const startIndex = (currentPage - 1) * pageSize;
    const endIndex = startIndex + pageSize;

    cards.forEach((card) => { (card as HTMLElement).style.display = 'none'; });
    visibleCards.forEach((card, idx) => {
      (card as HTMLElement).style.display = (idx >= startIndex && idx < endIndex) ? 'block' : 'none';
    });

    const resultsCount = document.getElementById('results-count');
    const noResults = document.getElementById('no-results');
    if (resultsCount) {
      const shownThisPage = totalVisible === 0 ? 0 : Math.max(0, Math.min(totalVisible, endIndex) - startIndex);
      resultsCount.textContent = `Mostrando ${shownThisPage} de ${totalCards} soluciones (p√°gina ${currentPage} de ${totalPages})`;
    }

    if (noResults) {
      noResults.style.display = totalVisible === 0 ? 'block' : 'none';
    }

    renderPagination(totalVisible);
  }

  function clearFilters() {
    const searchNameEl = document.getElementById('search-name') as HTMLInputElement | null;
    const filterDifficultyEl = document.getElementById('filter-difficulty') as HTMLSelectElement | null;
    if (searchNameEl) searchNameEl.value = '';
    if (filterDifficultyEl) filterDifficultyEl.value = '';
    currentPage = 1;
    filterSolutions();
  }

  document.getElementById('search-name')?.addEventListener('input', () => { currentPage = 1; filterSolutions(); });
  document.getElementById('filter-difficulty')?.addEventListener('change', () => { currentPage = 1; filterSolutions(); });
  document.getElementById('clear-filters')?.addEventListener('click', clearFilters);

  document.addEventListener('DOMContentLoaded', () => {
    if (!document.getElementById('pagination')) {
      const container = document.createElement('div');
      container.id = 'pagination';
      container.style.display = 'flex';
      container.style.gap = '0.5rem';
      container.style.flexWrap = 'wrap';
      container.style.marginTop = '1rem';
      const parent = document.getElementById('solutions-container')?.parentElement;
      parent?.insertBefore(container, document.getElementById('no-results'));
    }
    filterSolutions();
  });
</script>

